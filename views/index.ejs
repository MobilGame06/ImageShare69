<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta name="color-scheme" content="light dark">
  <title>Category</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-dark-5@1.1.3/dist/css/bootstrap-dark.min.css" rel="stylesheet">
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&display=swap" rel="stylesheet">
  
  <style>
    .font-roboto {
      font-family: 'Roboto', sans-serif;
    }
  </style>
</head>

<body class="bg-dark">
  <a href="/"><img width="40" height="40" src="https://cdn-icons-png.flaticon.com/512/25/25694.png" class="mx-auto d-block"></a>
  <h1 class="text-center text-white mt-5 font-roboto">Categories</h1>
  <div class="text-center mt-5">
    <% categories.forEach(function(category) { %>
    <button onclick="postCategory(event)" class="btn btn-light btn-lg mx-2 mb-1 font-roboto"><%= category.category %></button>
    <% }); %>
  </div>
</body>
</html>

<script>
  function postCategory(event) {
    event.preventDefault();
    const category = event.target.innerText;
    window.location.href = `/category/${category}`;
  }
</script>
